<%= render "components/resumes/header" %>
<%= render "components/resumes/educations" %>
<%= render "components/resumes/work_experience" %>
<%= render "components/resumes/skill" %>
<div class="modal fade" id="modal-contact" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for @message , url: user_contacts_path do |f| %>
        <%= f.hidden_field :user_id, value: @resume.user.id %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
          </button>
          <h5 class="modal-title" id="myModalLabel">Gửi tin nhắn</h5>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="subject" class="control-label">Chủ đề</label><br>
            <%= f.text_field :subject, class: "form-control", id: "subject" %>
          </div>
          <div class="form-group">
            <label for="message-text" class="control-label">Nội dung</label>
            <%= f.text_area :message, class: "form-control", id: "message-text"%>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-gray" data-dismiss="modal">Close</button>
          <%= f.submit "Send", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<a id="scroll-up" href="#"><i class="ti-angle-up"></i></a>

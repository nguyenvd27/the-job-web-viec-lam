<header class="page-header bg-img size-lg" style="background-image: 
  url(http://file.vinacircle.info/news/image/2017/Mar/fun_facts/ngan_ha_1.0.jpg)">
  <div class="container no-shadow">
    <h1 class="text-center">Ứng tuyển việc làm ngay</h1>
    <p class="lead text-center">Ứng tuyển bằng hồ sơ đã có, hoặc tạo mới hồ sơ</p>
    <hr>
    <!-- Job detail -->
    <a class="item-block item-block-flat" href="<%= job_path(@job.id) %>">
      <header>
        <img src="https://raw.githubusercontent.com/lampv318/image/master/noavatar-1.jpg" alt="">
        <div class="hgroup">
          <h4><%= @job.title %></h4>
          <h5><%= @job.company_name %></h5>
        </div>
        <div class="header-meta">
          <span class="location"><%= @job.location %></span>
          <time datetime="2016-03-10 20:00"><%= time_ago_in_words @job.updated_at %>ago</time>
        </div>
      </header>
    </a>
    <!-- END Job detail -->
    <!-- <div class="button-group">
      <div class="action-buttons">
        <a class="btn btn-primary" href="#sec-resume">Apply ngay</a>
      </div>
    </div> -->

  </div>
</header>
<!-- Main container -->
<main>
    <!-- Apply with resume -->
    <section id="sec-resume">
      <div class="container">
        <header class="section-header">
          <h2>Chọn 1 hồ sơ</h2>
        </header>
        <% @resumes.each do |resume| %>
          <%= render "components/resumes/resume_item_type3", resume: resume %>
        <% end %>
        <br>
        <div class="row">
          <div class="col-xs-12 col-md-3">
            <a class="btn btn-block btn-primary" href="<%= new_user_resume_path(current_user) %>">Tạo hồ sơ mới</a>
          </div>
        </div>
      </div>
    </section>
</main>
<!-- END Main container -->

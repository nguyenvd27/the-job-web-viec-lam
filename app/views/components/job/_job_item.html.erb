<div class="col-xs-12">
  <a class="item-block" href="<%= job_path(job.id) %>">
    <header>
      <% if job.company_avatar %>
        <img src="<%= job.company_avatar %>" alt="">
      <% else %>
        <img src="https://raw.githubusercontent.com/lampv318/image/master/noavatar-1.jpg" alt="">
      <% end %>
      <div class="hgroup">
        <h4><%= job.title %></h4>
        <h5><%= job.company_name %></h5>
      </div>
      <div class="header-meta">
        <span class="location"><%= job.location %></span>
        <span class="label label-warning"><%= job.employment_type%></span>
      </div>
    </header>
  </a>
</div>
